<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_inner_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesInnerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/category_bg_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">
            <ImageView
                android:id="@+id/category_bg_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/linguachat_logo"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/category_bg_card"
            android:text="@string/kirby"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/FirebaseUI.Text.T04"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/category_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/category_title"
            android:text="@string/lorem"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textColor="#fff"/>

        <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
            android:id="@+id/categories_sections"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_below="@id/category_desc"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</ScrollView>