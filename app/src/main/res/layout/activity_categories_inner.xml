<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_inner_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesInnerActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/category_bg_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/category_bg_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/linguachat_logo"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/category_bg_card"
        android:text="@string/kirby"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/category_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/category_title"
        android:text="@string/lorem"
        android:textAlignment="center"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"/>



</RelativeLayout>