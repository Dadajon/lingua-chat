<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linguachat.FragmentC">

    <TextView
        android:id="@+id/singles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/singles"
        android:textAppearance="@style/FirebaseUI.Text.T05"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/singles_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/singles"
        android:clipToPadding="false"
        android:saveEnabled="true"
        app:msrv_gravity="start"
        app:msrv_ms_per_inch="@dimen/normal_speed"
        app:msrv_snap_count="1" />

</RelativeLayout>
