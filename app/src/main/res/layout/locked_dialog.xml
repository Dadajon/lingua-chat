<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/locked_dialog_bg"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/locked_title"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/level_locked"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDialog"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locked_title"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="@string/unlock_instructions" />

    <ImageView
        android:id="@+id/divider_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/divider" />

    <Button
        android:id="@+id/okButton"
        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@color/fui_transparent"
        android:text="@string/ok_btn" />
</RelativeLayout>