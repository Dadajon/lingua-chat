<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linguachat.FragmentB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/review_page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/review_concepts"
            android:textAlignment="center"
            android:textAppearance="@style/FirebaseUI.Text.T05"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/added_concepts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_page_title"
            android:layout_margin="20dp"
            android:text="@string/_2_concepts_added"
            android:textAppearance="@style/FirebaseUI.Text.T09" />

        <GridLayout
            android:id="@+id/added_concepts_grid"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/added_concepts"
            android:columnCount="2"
            android:rowCount="2">

            <android.support.v7.widget.CardView
                android:id="@+id/card_feel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pattern" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="I feel like _____."
                    android:textAppearance="@style/FirebaseUI.Text.T08" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_dont_feel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pattern" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="I don't feel like _____."
                    android:textAppearance="@style/FirebaseUI.Text.T08" />

            </android.support.v7.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/example_concepts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/added_concepts_grid"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/example_concepts"
            android:textAppearance="@style/FirebaseUI.Text.T09" />

        <TextView
            android:id="@+id/welcome_to_the_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/example_concepts"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/welcome_to_the_app" />

        <GridLayout
            android:id="@+id/example_concepts_grid"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/welcome_to_the_app"
            android:columnCount="2"
            android:rowCount="2">

            <android.support.v7.widget.CardView
                android:id="@+id/card_for_good"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/expression" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="For good"
                    android:textAppearance="@style/FirebaseUI.Text.T08" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_plan_diff"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/tip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Plan vs. Promise"
                    android:textAppearance="@style/FirebaseUI.Text.T08" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_not_used"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pattern" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="I'm not used to ______."
                    android:textAlignment="center"
                    android:textAppearance="@style/FirebaseUI.Text.T08" />

            </android.support.v7.widget.CardView>
        </GridLayout>
    </RelativeLayout>
</ScrollView>
